generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DB_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  name  String?
  twoFactorEnabled Boolean  @default(false) //indicates if 2FA is enabled
  twoFactorSecret  String?  @unique        //stores the 2FA secret key
}