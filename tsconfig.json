{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"target": "ES2019",
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
		}
	},
	"include": [
		"src"
	]
}